{% extends 'base.tmpl' %}

{% block extra_head %}
    {{ super() }}
    {% include 'post_meta.partial' %}
{% endblock %}

{% block content %}
    {% include 'post.partial' %}
{% endblock %}

{% block sourcelink %}
{% if show_sourcelink %}
    <li>
    <a href="{{ post.source_link }}" id="sourcelink">{{ messages("Source") }}</a>
    </li>
{% endif %}
{% endblock %}

{% block extra_js %}
  <script src="/assets/js/curl/curl.min.js" data-curl-run="/assets/js/spa.js"></script>
{% endblock %}
